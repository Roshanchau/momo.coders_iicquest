generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post{
      id String @id @default(uuid())
      title String
      description String
      userId String
      categories Category[] @relation("PostToCategory")

      createdAt DateTime @default(now())
      updataedAt DateTime @updatedAt
}

model Category{
    id String @id @default(uuid())
    name String
    postId String
    post Post @relation("PostToCategory", fields: [postId], references: [id])
    videos Video[] @relation("videoToCategory") 

    createdAt DateTime @default(now())
    updataedAt DateTime @updatedAt

    @@index([postId])   
}

model Video{
    id String @id @default(uuid())
    url String
    categoryId String
    category Category @relation("videoToCategory",fields: [categoryId], references: [id])

    createdAt DateTime @default(now())
    updataedAt DateTime @updatedAt

    @@index([categoryId])
}